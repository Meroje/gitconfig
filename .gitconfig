[core]
	excludesfile = ~/.gitignore
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	preloadindex = true
[help]
	autoCorrect = 30
[alias]
	st = !tig status
	co = checkout
	s = status
[commit]
	verbose = true
[rebase]
	autostash = true
	autosquash = true
[stash]
	showPatch = true
[fetch]
	prune = true
[pull]
	rebase = true
[branch]
	autosetupmerge = true
	autosetuprebase = always
[mergetool]
	keepBackup = false
	prompt = false
[diff]
	renamelimit = 0
	mnemonicprefix = true
	renames = copies
	submodule = log
	algorithm = patience
	compactionHeuristic = true
	tool = Kaleidoscope
[remote "origin"]
#	fetch = +refs/pull/*/head:refs/remotes/origin/pr/*
[rerere]
	enabled = true
[status]
	showUntrackedFiles = all
	submoduleSummary = true
[submodule]
	fetchJobs = 4
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[web]
	browser = open
[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
[include]
	path = ~/.gitconfig.d/diff-so-fancy
	path = ~/.gitconfig.d/hooksPath
	path = ~/.gitconfig.d/identity
	path = ~/.gitconfig.d/composer-git-merge-driver
	path = ~/.gitconfig.local
